<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="Home page of a portfolio website for William Falk, a front-end developer from sweden"
        />
        <title>William Falk's Portfolio</title>

        <!-- CSS -->
        <link rel="stylesheet" href="css/shared.css" />
        <link rel="stylesheet" href="css/home.css" />
        <link rel="stylesheet" href="css/overlay.css" />

        <!-- JavaScript -->
        <script src="scripts/jsonData.js" defer></script>
        <script src="scripts/preloader.js" defer></script>
        <script src="scripts/app.js" defer></script>

        <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>

        <!-- Favicon -->
        <link rel="icon" href="images/Favicon-01.svg" type="image/svg+xml" />
        <link rel="alternate icon" href="favicon.ico" type="image/x-icon" />

        <!-- Hiding everything except backdrop -->
        <style>
            body > *:not(#backdrop) {
                display: none;
            }
        </style>
    </head>
    <body>
        <!-- Backdrop for modal -->
        <div id="backdrop"></div>
        <!-- End of backdrop -->

        <header>
        <!-- Navbar, modal and hero -->
            <%- include('includes/header') %>
        <!-- End of navbar, modal and hero -->
        </header>

        <main>
            <!-- Main section with cards -->
            <section id="home-content">
                <div id="cards-container">
                    <!-- Card 1 -->
                    <div class="all-cards" id="card-1">
                        <a href="about">
                            <div class="card">
                                <p id="card-1-p"></p>
                                <h2 id="card-1-h2"></h2>
                            </div>
                            <div class="card-img" id="memoji-container">
                                <img id="card-1-img" />
                            </div>
                        </a>
                    </div>

                    <!-- Card 2 -->
                    <div class="all-cards" id="card-2">
                        <a href="contact">
                            <div class="card">
                                <p id="card-2-p"></p>
                                <h2 id="card-2-h2"></h2>
                            </div>
                            <div class="card-img" id="contact-img-container">
                                <img id="card-2-img" />
                            </div>
                        </a>
                    </div>

                    <!-- Card 3 -->
                    <div class="all-cards" id="card-3">
                        <a href="about#skills">
                            <div class="card">
                                <p id="card-3-p"></p>
                                <h2 id="card-3-h2"></h2>
                            </div>
                            <div id="skills-list-container">
                                <ul id="skills-ul">
                                    <li>
                                        <img id="skill-img1" />
                                    </li>
                                    <li>
                                        <img id="skill-img2" />
                                    </li>
                                    <li>
                                        <img id="skill-img3" />
                                    </li>
                                    <li>
                                        <img id="skill-img4" />
                                    </li>
                                </ul>
                            </div>
                        </a>
                    </div>

                    <!-- Card 4 -->
                    <div class="all-cards" id="card-4">
                        <a href="portfolio">
                            <div class="card">
                                <p id="card-4-p"></p>
                                <h2 id="card-4-h2"></h2>
                            </div>
                            <div class="card-img" id="portfolio-img-container">
                                <img id="card-4-img" />
                            </div>
                        </a>
                    </div>
                </div>
            </section>
            <!-- End of card-section -->
        </main>

        <!-- Footer-section -->
        <footer>
            <%- include('includes/footer') %>
        </footer>
        <!-- End of footer -->

        <!-- Preloader container -->
        <div
            id="preloader"
            style="
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            "
        >
            <img src="images/preloader.gif" alt="preloader" />
        </div>
        <!-- End of preloader -->
    </body>
</html>

