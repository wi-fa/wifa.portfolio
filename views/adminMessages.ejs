<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Wifa Admin Messages</title>

        <!-- CSS -->
        <link rel="stylesheet" href="/css/dashboard.css" />
        <link rel="stylesheet" href="/css/messages.css" />

        <!-- JavaScript -->
        <script src="/scripts/dashBoard.js" defer></script>
        <script src="/scripts/app.js" defer></script>
        <script src="/scripts/adminMessages.js" defer></script>

        <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <!-- Favicon -->
        <link rel="icon" href="/images/Favicon-01.svg" type="image/svg+xml" />
        <link rel="alternate icon" href="favicon.ico" type="image/x-icon" />
    </head>
    <body>
        <!-- Main section with messages -->
        <div id="messages" class="dashboard-container">
            <%- include('includes/sidebar') %>
            <section>
                <div class="mobile-header">
                    <p id="back-arrow">&#8592;</p>
                    <h4 class="dashboard-h4-mobile">Messages</h4>
                </div>
            </section>
            <section class="dashboard-content">
                <div id="dashboard-header">
                    <div id="dashboard-header-info">
                        <h2>My <br />Messages</h2>
                        <h5 id="date-time">Hey</h5>
                    </div>
                    <h4 id="dashboard-h4-default">Overview</h4>
                </div>
                <div class="content-container">
                    <% messages.forEach(function(message) { %>
                    <div class="message-card">
                        <div class="message-summary">
                            <img src="https://ui-avatars.com/api/?name=<%= encodeURIComponent(message.firstName + ' ' + message.lastName) %>&color=ffffff&background=2bd890" alt="Avatar" class="message-avatar">
                            <p>
                                <%= message.firstName %> <%= message.lastName
                                %>
                            </p>
                        </div>
                        <div class="message-details">
                            <p><strong>Email:</strong> <%= message.email %></p>
                            <p>
                                <strong>Message:</strong> <%= message.message %>
                            </p>
                        </div>
                    </div>
                    <% }); %>

                </div>
                <% if (pages > 1) { %>
                    <div class="pagination">
                        <% for (let i = 1; i <= pages; i++) { %>
                            <a href="/admin-dashboard/messages?page=<%= i %>" class="<%= i === Number(current) ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                    </div>
                <% } %>
            </section>
            <!-- End of main section -->
        </div>
        <div id="switch-label">
            <p id="theme-p"></p>
            </div>
        <div id="theme-switch">
            <label class="switch">
                <input type="checkbox" id="theme-toggle">
                <span class="slider round"></span>
              </label>
        </div>
    </body>
</html>

<!-- All HTML before converting to EJS is checked with W3C'S Validator -->
